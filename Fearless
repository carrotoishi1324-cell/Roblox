-- Bypass Function
local function BypassWord(word)
    -- Implement your bypass logic here
    local bypassed = string.gsub(word, "a", "@")
    bypassed = string.gsub(bypassed, "i", "1")
    bypassed = string.gsub(bypassed, "e", "3")
    bypassed = string.gsub(bypassed, "o", "0")
    return bypassed
end

-- Auto Bypass Chat Hook
local ChatService = game:GetService("TextChatService")
local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer

local function SetupChatBypass()
    if ChatService then
        local Channel = ChatService.TextChannels.RBXGeneral
        if Channel then
            Channel.OnIncomingMessage = function(message)
                if Rayfield.Flags["AutoBypassToggle"] then
                    -- Process message with bypass
                    local processedText = BypassWord(message.Text)
                    -- Modify message here
                    return message
                end
                return message
            end
        end
    end
end

-- Initialize
Rayfield:Notify({
